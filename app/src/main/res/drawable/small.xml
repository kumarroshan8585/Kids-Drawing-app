<?xml version="1.0" encoding="utf-8"?>
<!-- Dithering is used in XML to improve the appearance of gradients and reduce color banding by adding noise to blend colors smoothly. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"

    android:dither="true"
    android:shape="oval"

    >
    <size
        android:height="10dp"
        android:width="10dp"
        />
    <solid
        android:color="#FF666666"
        />

</shape>